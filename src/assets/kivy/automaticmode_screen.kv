#: import ew kivy.uix.effectwidget

#AutomaticMode mode layout
<AutomaticMode>:
    name: "automatic"
    on_pre_enter:
        root.refresh()

    #frame surrounding the workspace
    BoxLayout:
        orientation: 'vertical'
        padding:30,0,30,30
        canvas.before:
            Color:
                rgb: bck_color
            Rectangle:
                pos: self.pos
                size: self.size

        #mode title
        BoxLayout:
            orientation:'horizontal'
            size_hint_y:None
            height:40
            Label:
                size_hint_x: None
                width:25
            Label:
                text: "Automatic Mode"
                font_name: font_regular
                font_size: '18sp'
                color: header_text_color
                size_hint_y: None
                size_hint_x: None
                height:40
                halign:"left"
                valign:"center"

        GridLayout:
            size:self.parent.size
            padding:20
            cols:2

            #workspace background
            canvas.before:
                Color:
                    rgb: workspace_bck_color
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                spacing:10
                orientation:'vertical'
                padding:0,0,20,0

                BoxLayout:
                    orientation:'vertical'
                    size_hint_y:None
                    height:190
                    BoxLayout:
                        orientation:'horizontal'

                        Label:
                            text: "Camera:"
                            halign:"left"
                            text_size: self.size
                            size_hint_x:None
                            width:90
                            font_name: font_light
                            color: header_text_color
                    Spinner:
                        id:camera_port
                        text:root.set_text_camera_spinner()
                        text_size : self.width, None
                        size_hint_y: 1.6
                        size_hint_x: 0.7
                        halign:'center'
                        color: normal_text_color
                        font_name: font_light
                        background_normal:'./src/assets/images/light_grey.jpg'
                        background_down: './src/assets/images/pressed.jpg'
                        values: root.get_values_camera()
                        on_text: root.on_spinner_camera_select(camera_port.text)
                        option_cls: Factory.get("MySpinnerOption")
                    Label:
                        size_hint_y: 0.5
                    Label:
                        text: "Learning model:"
                        halign:"left"
                        text_size: self.size
                        font_name: font_light
                        color: header_text_color
                    Spinner:
                        id:model_name
                        text:root.model_name
                        text_size : self.width, None
                        size_hint_y: 1.6
                        size_hint_x: 0.7
                        halign:'center'
                        color: normal_text_color
                        font_name: font_light
                        background_normal:'./src/assets/images/light_grey.jpg'
                        background_down: './src/assets/images/pressed.jpg'
                        values: root.get_values_model()
                        on_text: root.on_spinner_model_select(model_name.text)
                        option_cls: Factory.get("MySpinnerOption")

                    Label:
                        size_hint_y: 0.5
                    Label:
                        text: "Number of persons in model:"
                        halign:"left"
                        text_size: self.size
                        font_name: font_light
                        color: header_text_color
                    Label:
                        id: number_people_model_text
                        text: "None" #device part number
                        halign:"left"
                        text_size: self.size
                        font_name: font_light
                        color: normal_text_color
                    Label:
                        size_hint_y: 0.5
                    Label:
                        text: "Number of persons in database:"
                        halign:"left"
                        text_size: self.size
                        font_name: font_light
                        color: header_text_color
                    Label:
                        id: number_people_database_text
                        text: root.set_text_number_in_base()
                        halign:"left"
                        text_size: self.size
                        font_name: font_light
                        color: normal_text_color
                    Label:



                Label: #space between infos and statistics
                    size_hint_y:.1

                #statistics area. currently text as a placeholder


                ImageButton:
                    id: plot
                    source: root.read_plot()
                    allow_stretch: True
                    size_hint_y:None
                    height:200
                    width: 320
                    size_hint_x:None
                    on_press: root.popup_photo()

                RoundButton: #clear statistics button
                    text: "Clear"
                    size_hint:None,None
                    on_press: root.clear_stats()
                    font_size:13
                    width: 50
                    height: 20

            BoxLayout:
                orientation:'vertical'

                #space between button and photo
                Label:
                    size_hint_y:None
                    height:10

                #revieved photo of device
                BoxLayout:
                    orientation: 'vertical'
                    padding: 0,10,0,20
                    BoxLayout:
                        canvas:
                            Rectangle:
                                source: './src/assets/images/light_grey.jpg'
                                pos: self.pos
                                size: self.size
                        KivyCamera:
                            id: camera

                BoxLayout:
                    height:35
                    size_hint_y: None
                    orientation: 'horizontal'

                    Label:
                        size_hint_x: 0.6
                    RoundButton:
                        id: on_off_btn
                        text: "Turn on"
                        text_size: self.size
                        size_hint_y:None
                        size_hint_x: 1.1
                        height:35
                        halign:"center"
                        valign:"center"
                        font_name: font_light
                        color: normal_text_color
                        on_release:
                            root.camera_on_off()

                    Label:
                        size_hint_x: 0.2

                    RoundButton:
                        id: load_image_btn
                        text: "Load Photo"
                        text_size: self.size
                        size_hint_y:None
                        size_hint_x: 1
                        height:35
                        halign:"center"
                        valign:"center"
                        font_name: font_light
                        color: normal_text_color
                        on_release:
                            root.load_photo()
                    Label:
                        size_hint_x: 0.6

                Label:
                    size_hint_y:.1

                BoxLayout:
                    size_hint_y:None
                    height:30
                    valign:"middle"
                    halign:'center'
                    Label:
                        size_hint_x:.9

                    Label:
                        text:"Identificated: "
                        font_name: font_light
                        color: header_text_color
                        text_size: self.size
                        font_size: 17
                        valign:"middle"
                        halign:'right'
                        size_hint_x:None
                        width: 110

                     #photo check result: OK/NOK

                    RoundButton:
                        id: identification_btn
                        size_hint_y:None
                        size_hint_x:4
                        height:30
                        pos_hint: {'top': 1}
                        text:"N/A"
                        color: normal_text_color
                        font_name: font_light
                        text_valign:"middle"
                        text_halign:'right'
                        font_size: 17
                        disable: root.disable_button(identification_btn)
                        on_release:
                            root.switch_on_person(identification_btn.text)
                    Label:
                        size_hint_x:.9

                Label:
                    size_hint_y: None
                    height: 10

                BoxLayout: #next/previous photo button box
                    orientation: 'horizontal'
                    size_hint_y:None
                    height:30
                    BoxLayout: #ok and nok results box
                        orientation: 'vertical'

                    RoundButton:
                        id: its_ok_btn
                        size_hint_x:None
                        width: 35
                        size_hint_y:None
                        height:35
                        pos_hint: {'top': 1}
                        disable: root.disable_button(its_ok_btn)
                        on_release:
                            root.its_ok()
                        Image:
                            source: './src/assets/images/accept64_bold.png'
                            center_y: its_ok_btn.center_y
                            center_x: its_ok_btn.center_x
                            allow_stretch: True
                            width: its_ok_btn.height*.5
                            opacity:0.5

                    Label:
                        size_hint_x:None
                        width:10
                    RoundButton:
                        id: its_nok_btn
                        size_hint_x:None
                        width: 35
                        size_hint_y:None
                        height:35
                        pos_hint: {'top': 1}
                        disable: root.disable_button(its_nok_btn)
                        on_release:
                            root.its_nok()
                        Image:
                            source: './src/assets/images/cancel64_bold.png'
                            center_y: its_nok_btn.center_y
                            center_x: its_nok_btn.center_x
                            allow_stretch: True
                            width: its_nok_btn.height*.4
                            opacity:0.5

                    Label:

                Label:
                    size_hint_y:.1